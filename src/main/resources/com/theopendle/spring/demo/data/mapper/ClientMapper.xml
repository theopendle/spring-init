<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theopendle.spring.demo.data.mapper.ClientMapper">

    <select id="findByFirstName" resultType="com.theopendle.spring.demo.model.Client" parameterType="java.lang.String">
        SELECT
            id as id,
            first_name as firstName,
            last_name as familyName
        FROM clients
        WHERE first_name = #{value}
    </select>

</mapper>